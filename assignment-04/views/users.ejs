<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head.ejs")%>
    <link rel="stylesheet" href="/css/users.css" />
  </head>
  <body>
    <%- include("includes/navigation.ejs") %>
    <main class="container">
      <% if(users.length) {%>
      <ul class="users-list">
        <% for(let user of users){ %>
        <li class="users-list__item">
          <div class="users-list__item__avatar"><%= user[0]%></div>
          <p class="users-list__item__user-name"><%= user%></p>
        </li>
        <% } %> <% }else{ %>
        <p>No user added..</p>
        <% } %>
      </ul>
    </main>
  </body>
</html>
