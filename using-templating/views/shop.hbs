<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{pageTitle}}</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>

    <main class="content">
      {{#if products.length}}
        {{#each products}}
          <p>{{title}}</p>
        {{/each}}
      {{else}}
        <p>No products...</p>
      {{/if}}
    </main>
  </body>
</html>